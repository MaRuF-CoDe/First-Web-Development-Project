<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Camping.bd</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-secondary navbar-dark
    ">
      <!-- Container wrapper -->
      <div class="container">
        <!-- Navbar brand -->
        <a class="navbar-brand" href="/">Camping</a>

         <!-- Left links -->
    
          <div class="d-flex align-items-center">
            <% if(!currentUser){ %>
            <a href="/login" type="button" class="btn btn-primary me-3">
              Login</a>
              <a href="/register" type="button" class="btn btn-primary me-3">
                Sign Up</a>
              <% }else{ %>
                <p><a href="#" class="post-btn" >Signed In As <%= currentUser.username%> </a></p>
                <a href="/logout" type="button" class="btn btn-primary me-3">
                    Log Out</a>
                <% } %>
          </div>
      </div>
    </nav>

    <div class="container">
      <% if(error && error.length > 0) { %>
          <div class="alert alert-danger" role="alert">
          <%= error %>
          </div>
      <% } %>
      <% if(success && success.length > 0) { %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
      <% } %>
    </div>
    <!-- Navbar -->