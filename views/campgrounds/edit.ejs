<%- include ('../partials/header'); -%>
<div class="container">
<h1 style="text-align : center">Edit campground here!!</h1>
<form class="col-lg-6 offset-lg-3" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group row">
          <label>Name</label>
          <input type="text" class="form-control"  name="campground[name]" value="<%= campground.name%>">
        </div>
        <div class="form-group row">
          <label>Price</label>
          <input type="number" class="form-control"  name="campground[price]" value="<%= campground.price%> min="0.01" step="0.01">
        </div>
        <div class="form-group row">
          <label>Image Url</label>
          <input type="text" class="form-control"  name="campground[image]" value="<%= campground.image%>">
        </div>
        <div class="form-group row">
          <label>Description</label>
          <input type="text" class="form-control"   name="campground[description]" value="<%= campground.description%>">
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
      
      </form>

      <div>
        <a class="btn btn-success" href="/campgrounds">Go Back</a>
      </div>
    
    </div>
    
  
<%- include ('../partials/footer'); -%>