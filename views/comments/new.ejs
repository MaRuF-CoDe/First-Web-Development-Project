<%- include ('../partials/header'); -%>
<div class="container">
<h1 style="text-align : center">Add new comment for <%= campground.name %> </h1>
<form class="col-lg-6 offset-lg-3" action="/campgrounds/<%= campground._id%>/comments" method="POST">
        <div class="form-group row">
          <label>Comment</label>
          <input type="text" class="form-control"  name="comment[text]">
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
      <div>
        <a class="btn btn-success" href="/campgrounds">Go Back</a>
      </div>
    </div>
<%- include ('../partials/footer'); -%>